{
  "name": "ef-cms-web-client",
  "version": "1.0.0",
  "description": "Electronic Filing / Case Management System Web Client",
  "main": "index.js",
  "scripts": {
    "cypress": "cypress run",
    "cypress:open": "cypress open --config watchForFileChanges=true",
    "dev": "USTC_ENV=dev parcel --no-cache --no-hmr src/index.pug",
    "dev:debug": "USTC_DEBUG=true npm run dev",
    "dist": "rm -rf dist; USTC_ENV=prod parcel build --no-cache src/index.pug",
    "lint": "eslint ./src; stylelint ./src/**/*.scss;",
    "test": "jest ./**/**/*.test.js",
    "test:pa11y": "node pa11y.js",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ustaxcourt/ef-cms.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ustaxcourt/ef-cms/issues"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "postcss": {
    "modules": false,
    "plugins": {
      "autoprefixer": {
        "browsers": [
          ">2%",
          "last 4 versions",
          "Firefox ESR",
          "not ie < 11"
        ],
        "flexbox": "no-2009"
      }
    }
  },
  "homepage": "https://github.com/ustaxcourt/ef-cms#readme",
  "dependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@cerebral/react": "^4.0.3",
    "@fortawesome/fontawesome-svg-core": "^1.2.8",
    "@fortawesome/free-solid-svg-icons": "^5.5.0",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "acorn": "^6.0.4",
    "ajv": "^6.5.5",
    "autoprefixer": "^9.3.1",
    "axios": "^0.18.0",
    "axios-mock-adapter": "^1.15.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-cerebral": "^1.0.1",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-preset-env": "^1.7.0",
    "cerebral": "^5.0.3",
    "cypress": "^3.1.1",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-cypress": "^2.1.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-security": "^1.4.0",
    "express": "^4.16.4",
    "i": "^0.3.6",
    "jest": "^23.6.0",
    "joi": "^14.0.6",
    "jsdom": "^12.2.0",
    "moment": "^2.22.2",
    "nock": "^10.0.2",
    "pa11y": "^5.1.0",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.15.2",
    "prop-types": "^15.6.2",
    "pug": "^2.0.3",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "regenerator-runtime": "^0.12.1",
    "riot": "^3.13.1",
    "riot-route": "^3.1.4",
    "sass": "^1.15.0",
    "stylelint": "^9.8.0",
    "stylelint-config-idiomatic-order": "^5.0.0",
    "stylelint-config-standard": "^18.2.0",
    "uswds": "^1.6.9"
  }
}
