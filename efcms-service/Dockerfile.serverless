FROM node:8-alpine

RUN apk add --no-cache --update bash
RUN apk add --no-cache --update git

ENV AWS_CLI_VERSION 1.16.31

RUN apk --no-cache update && \
    apk --no-cache add python py-pip py-setuptools ca-certificates groff less && \
    apk --no-cache add bash git openssh && \
    pip install --upgrade pip && \
    pip --no-cache-dir install awscli==${AWS_CLI_VERSION} && \
    rm -rf /var/cache/apk/*


COPY business/package.json /home/app/business/package.json
RUN cd /home/app/business; npm install --production

COPY efcms-service/package.json /home/app/efcms-service/package.json
RUN cd /home/app/efcms-service; npm install

COPY . /home/app
WORKDIR /home/app/efcms-service

# because serverless does not work unless you are in a git repo....
RUN git config --global user.email "blank@example.com"
RUN git config --global user.name "Local"
RUN git init && touch tmp.txt && git add tmp.txt && git commit -m 'rev'

CMD ./run-serverless.sh $STAGE $REGION