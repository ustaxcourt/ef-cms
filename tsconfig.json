{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["jest", "node"],
    "target": "es6"
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "./types/**/*.d.ts",
    "./web-api/src/**/*",
    "./shared/src/**/*",
    "./web-client/src/**/*"
  ],
  "exclude": ["node_modules"]
}
