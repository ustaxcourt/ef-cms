{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["jest", "node"],
    "target": "es6",
    "jsx": "react"
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "./types/**/*.d.ts",
    "./web-api/src/**/*",
    "./shared/src/**/*",
    "./web-client/src/**/*",
    "./web-client/integration-tests/fixtures/consolidated-cases.ts"
  ],
  "exclude": ["node_modules"]
}
