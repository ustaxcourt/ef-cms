{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowSESPuts",
      "Effect": "Allow",
      "Principal": {
        "Service": "ses.amazonaws.com"
      },
      "Action": "s3:PutObject",
      "Resource": "arn:aws:s3:::BUCKETNAME/*",
      "Condition": {
        "StringEquals": {
          "aws:Referer": "AWSACCOUNTID"
        }
      }
    }
  ]
}
