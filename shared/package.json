{
  "name": "ef-cms-shared",
  "version": "1.0.0",
  "description": "Electronic Filing / Case Management System Shared Components",
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "jest",
    "test:snyk": "snyk test",
    "test:watch": "jest --watch",
    "docker:init": "./docker-init.sh",
    "docker:lint": "./docker-lint.sh",
    "docker:shellcheck": "./docker-shellcheck.sh",
    "docker:audit": "./docker-audit.sh",
    "docker:sonarqube": "./docker-sonarqube.sh",
    "docker:test": "CONTAINER_NAME=shared-test ./docker-test.sh",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ustaxcourt/ef-cms.git"
  },
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/ustaxcourt/ef-cms/issues"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tools/**/*.js",
      "!src/proxies/**/*.js",
      "!src/**/ContactFactory.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "homepage": "https://github.com/ustaxcourt/ef-cms#readme",
  "dependencies": {
    "aws-sdk": "^2.476.0",
    "axios": "^0.19.0",
    "csv-parse": "^4.4.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-sort-requires": "^2.1.0",
    "joi-browser": "^13.4.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.25",
    "pdf-lib": "^0.6.3",
    "qs": "^6.7.0",
    "s3-zip": "^3.0.0",
    "sanitize-filename": "^1.6.1",
    "tmp": "^0.1.0",
    "uuid": "^3.3.2",
    "snyk": "^1.189.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-jsdoc": "^4.8.4",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sort-keys-fix": "^1.0.1",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.0",
    "sinon": "^7.3.2"
  },
  "snyk": true
}
